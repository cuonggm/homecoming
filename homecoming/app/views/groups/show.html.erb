<!-- Page Content -->
<div class="container" id="group-body" data-group-id="<%= @group.id %>">

  <div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

      <!-- Title -->
      <h1 class="mt-4"><span class="badge badge-dark">Group</span>
        <%= @group.name %>
      </h1>

      <!-- Author -->
      <p class="lead">
        created by
        <a href="#">
          <%= @group.owner.nickname %> |
          <%= @group.owner.email %></a>
      </p>

      <!-- Date/Time -->
      <p>Last updated at
        <%= @group.updated_at %>
      </p>

      <!-- Preview Image -->
      <div class="item ">
        <div class="thumbnail">
          <div class="caption">
            <h4 class="group inner list-group-item-heading">
              <span class="badge badge-secondary">Destination: </span>
              <%= link_to @group.destination.name, @group.destination %>
            </h4>
            <p class="group inner list-group-item-text">
              <span class="badge badge-secondary">Address: </span>
              <%= @group.destination.address %>

            </p>
            <p class="group inner list-group-item-text">
              <span class="badge badge-secondary">Speciality: </span>
              <%= @group.destination.speciality %>

            </p>
          </div>
          <img class="group list-group-image img-fluid rounded" src="https://advertisingvietnam.com/wp-content/uploads/2018/04/Du-l%E1%BB%8Bch-Vi%E1%BB%87t-Nam.jpg"
            alt="">
        </div>
      </div>

      <hr>

      <!-- Post Content -->
      <p class="lead"></p>
      <hr>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

      <!-- Description -->
      <div class="card my-4">
        <h5 class="card-header">ChatBox</h5>
        <div class="card-body">

          <!-- --------------------Start Chat----------------------- -->
          <div class="container">
            <div class="messaging">
              <div class="inbox_msg">
                <div class="mesgs">
                  <div class="msg_history" id="message-list">
                  <!-- Content history messages -->
                  </div>
                  <div class="type_msg">
                    <div class="input_msg_write">
                      <input id="input-message-to-group" data-group-id="<%= @group.id %>" data-sender-id="<%= current_user.id %>"
                        data-group-id="<%= @group.id %>" type="text" class="write_msg" placeholder="Type a message" />
                      <button id="send-message-to-group" data-group-id="<%= @group.id %>" class="msg_send_btn" type="button"><i
                          class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                    </div>
                  </div>
                </div>

              </div>
              <p class="text-center top_spac"> Design by <a target="_blank" href="#">MC48</a></p>
            </div>
          </div>
          <!-- -----------------------End Chat--------------------------- -->

        </div>
      </div>

      <!-- Description -->
      <div class="card my-4">
        <h5 class="card-header">Description</h5>
        <div class="card-body">
          <%= @group.description.html_safe %>
        </div>
      </div>

      <!-- List Members -->
      <div class="card my-4">
        <h5 class="card-header">Members <span class="badge badge-dark">
            <%= @group.members.size %></span></h5>
        <div class="card-body">
          <% @group.members.each do |member| %>
          <!-- Single Member -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="https://robohash.org/porrodoloreipsum.png?size=300x300&set=set1"
              style="width:50px; height: 50px;" alt="">
            <div class="media-body">
              <h5 class="mt-0">
                <%= link_to member.nickname, member, class: "mt-0" %>
              </h5>

              Email:
              <%= member.email %>
            </div>
          </div>
          <% end %>

        </div>
      </div>
    </div>

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->